<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@mipmap/backgroundpage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaveApply">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@mipmap/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:hint="Give Reason For Leave "
        android:background="@mipmap/editbackground"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/open_sans_light"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColor="#2f6699"
        android:textColorHint="#2f6699"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/leaveEdit"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Type Here"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textAlignment="center"
        android:fontFamily="@font/open_sans_light"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:textColorHint="#2f6699"
        android:textColor="#2f6699"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnLeave"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/open_sans_light"
        android:background="@mipmap/loginbutton"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Click" />

</LinearLayout>