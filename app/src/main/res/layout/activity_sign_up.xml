<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@mipmap/backgroundpage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtPhone"
                    android:maxLength="10"
                    android:hint="Mobile"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/editbackground"
                    android:fontFamily="@font/open_sans_light"
                    android:inputType="phone"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edtName"
                    android:hint="Name"
                    android:maxLength="20"
                    android:textAlignment="center"
                    android:fontFamily="@font/open_sans_light"
                    android:background="@mipmap/editbackground"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"  />

                <EditText
                    android:id="@+id/edtPassword"
                    android:maxLength="20"
                    android:textAlignment="center"
                    android:hint="Password"
                    android:fontFamily="@font/open_sans_light"
                    android:background="@mipmap/editbackground"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"  />

                <EditText
                    android:id="@+id/edtEmail"
                    android:maxLength="35"
                    android:hint="E-mail"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/editbackground"
                    android:fontFamily="@font/open_sans_light"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edtPancard"
                    android:hint="Pan Card"
                    android:maxLength="30"
                    android:textAlignment="center"
                    android:fontFamily="@font/open_sans_light"
                    android:background="@mipmap/editbackground"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"  />

                <EditText
                    android:id="@+id/edtAadharcard"
                    android:maxLength="30"
                    android:hint="Aadhar Card"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/editbackground"
                    android:fontFamily="@font/open_sans_light"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edtEmergencyContactNumber"
                    android:hint="Emergency Mobile Number"
                    android:maxLength="10"
                    android:textAlignment="center"
                    android:fontFamily="@font/open_sans_light"
                    android:background="@mipmap/editbackground"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"  />

                <EditText
                    android:id="@+id/edtAddress"
                    android:maxLength="60"
                    android:hint="Address"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/editbackground"
                    android:fontFamily="@font/open_sans_light"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edtReferenceName"
                    android:hint="Reference Name"
                    android:maxLength="20"
                    android:textAlignment="center"
                    android:fontFamily="@font/open_sans_light"
                    android:background="@mipmap/editbackground"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"  />

                <EditText
                    android:id="@+id/edtReferenceMobileNumber"
                    android:hint="Reference Mobile Number"
                    android:maxLength="10"
                    android:textAlignment="center"
                    android:fontFamily="@font/open_sans_light"
                    android:background="@mipmap/editbackground"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="16sp"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"  />

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnChoose"
                    android:text="Choose"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="20sp"
                    android:background="@mipmap/loginbutton"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"  />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_marginTop="20dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnSignUp"
                    android:layout_marginBottom="20dp"
                    android:text="SignUp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="20sp"
                    android:background="@mipmap/loginbutton"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"  />

                <TextView
                    android:background="@mipmap/bottomline"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
                <TextView
                    android:text="SATACHI Global Pvt. Ltd."
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
